        android:text="read_adaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_go_readadaption"
        />
    <Button
        android:id="@+id/btn_go_write_commu"
        android:text="community test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_go_fragment"
        android:text="fragment test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />
</LinearLayout>